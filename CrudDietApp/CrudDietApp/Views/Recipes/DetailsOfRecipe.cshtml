@model CrudDietApp.Models.Recipe

@{
    ViewData["Title"] = "DetailsOfRecipe";
}

<h1>
    Making the @Model.Title
    <BR>
    Created by @((Model.CreatedBy == null) ? "guest user" : Model.CreatedBy.Username)
</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.PictureUrl" style="height:256px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Method)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Method)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "UpdateRecipe", new { id = Model.Id }) |
    <a asp-action="Index">Back to Recipe List</a>
</div>